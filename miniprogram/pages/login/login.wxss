/* 页面整体样式：居中+留白 */
.login-container {
  padding: 60rpx 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 80rpx;
  text-align: center;
}

/* 输入框组样式 */
.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-box {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: #fff;
}

/* 登录按钮样式 */
.login-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4F9EFD; /* 清新蓝色 */
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin-top: 40rpx;
}

/* 提示信息样式（错误提示红色） */
.tips {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #ff4d4f;
  text-align: center;
}