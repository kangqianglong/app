<!-- 首页布局：标题 + 功能按钮 + 跳转入口 -->
<view class="container">
  <!-- 顶部标题区 -->
  <view class="header">
    <text class="title">首页</text>
    <text class="subtitle">欢迎使用小程序</text>
  </view>

  <!-- 功能按钮区 -->
  <view class="btn-group">
    <!-- 跳转到登录页按钮 -->
    <button 
      class="func-btn" 
      bindtap="goToLogin"  
    >
      去登录
    </button>

    <!-- 跳转到个人中心按钮 -->
    <button 
      class="func-btn" 
      bindtap="goToMine"   
    >
      个人中心
    </button>
  </view>

  <!-- 其他内容区（示例：列表） -->
  <view class="list">
    <view class="list-item" bindtap="goToDetail">
      <text>查看详情 →</text>
    </view>
   <!-- <view class="list-item-logininfo" bindtap="goToInginInfo">
      <text>用户列表 →</text>
    </view>  --> 
  </view>
</view>