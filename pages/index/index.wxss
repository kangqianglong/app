/* 页面容器 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标题区样式 */
.header {
  text-align: center;
  margin: 60rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

/* 按钮组样式 */
.btn-group {
  display: flex;
  gap: 30rpx;  /* 按钮间距 */
  padding: 20rpx;
}

.func-btn {
  flex: 1;  /* 按钮平分宽度 */
  height: 120rpx;
  line-height: 80rpx;
  background-color: #4F9EFD;
  color: white;
  border-radius: 10rpx;
}

/* 列表项样式 */
.list {
  margin-top: 80rpx;
}

.list-item {
  padding: 30rpx;
  background-color: rgb(0, 255, 106);
  border-radius: 10rpx;
  text-align: center;
  color: #4F9EFD;
  font-size: 28rpx;
}
.list-item-logininfo {
  padding: 30rpx;
  background-color: gray;
  border-radius: 10rpx;
  text-align: center;
  color: #4F9EFD;
  font-size: 28rpx;
}